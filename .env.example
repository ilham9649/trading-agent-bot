# ========================================
# Trading Agent Bot Configuration
# ========================================
# Copy this file to .env and fill in your API keys
# Never commit .env to version control!

# ========================================
# REQUIRED: Telegram Bot Configuration
# ========================================
# Get your bot token from @BotFather on Telegram
# Instructions: https://core.telegram.org/bots#6-botfather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ========================================
# REQUIRED: AI API Keys
# ========================================

# Z.AI (GLM) API Key - Used for main analysis
# Get from: https://api.z.ai/
# This is the primary LLM for stock analysis
GLM_API_KEY=your_z_ai_api_key_here

# OpenAI API Key - Used ONLY for embeddings
# Get from: https://platform.openai.com/api-keys
# Note: Only used for text embeddings, not for chat/analysis
OPENAI_API_KEY=your_openai_api_key_here

# ========================================
# REQUIRED: Market Data API Keys
# ========================================

# Finnhub API Key - Market data provider
# Get free key from: https://finnhub.io/
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage API Key - News and financial data provider
# Get free key from: https://www.alphavantage.co/support/#api-key
# Free tier: 25 API calls per day
# IMPORTANT: Required for news data in stock analysis
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# ========================================
# OPTIONAL: Bot Configuration
# ========================================

# Enable debug mode (shows more detailed logs)
# Values: True or False
BOT_DEBUG=False

# Logging level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Default timeframe for stock data
# Options: 1d, 5d, 1mo, 3mo, 6mo, 1y, 2y, 5y, 10y, ytd, max
DEFAULT_TIMEFRAME=1d

# Maximum number of recommendations to show
MAX_RECOMMENDATIONS=5

# Directory for storing results
RESULTS_DIR=./eval_results

# Log file location
LOG_FILE=./bot.log